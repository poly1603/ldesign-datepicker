{
  "name": "@ldesign/datepicker-core",
  "version": "1.0.0",
  "description": "LDesign DatePicker Core - Framework agnostic date picker library",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles/index.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "datepicker",
    "calendar",
    "timepicker",
    "date",
    "time"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "devDependencies": {
    "sass": "^1.69.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "lucide": "^0.559.0"
  }
}
